<div class="row">
  <div class="col-md-12">

    <p class="text-right"><h1>Listing articles</h1></p>
    <p><%= link_to 'New article', new_article_path, class: "text-right btn btn-primary" %></p>

    <div class="table-responsive">
      <table class="table">
        <thead class="thead-inverse">
        <tr>
          <th>Title</th>
          <th>Text</th>
          <th></th>
        </tr>
        </thead>
        
        <tbody>
        <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td class="text-sm-right">
            <%= link_to 'Show', article_path(article), class: "btn btn-secondary btn-sm" %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning btn-sm" %>
            <%= link_to 'Destroy', article_path(article), class: "btn btn-danger btn-sm",
              method: :delete,
              data: { title: 'test', confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  
  </div>
</div>
